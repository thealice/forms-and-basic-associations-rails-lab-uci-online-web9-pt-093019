<h1>Create a Song</h1>

<%= form_for @song  do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <br />
  <%= f.label :artist_name %>
  <%= f.text_field :artist_name %>
  <br />
  <!--
    <%= f.label :genre_name %>
    <%= f.text_field :genre_name, list: "genres_autocomplete" %>
    <datalist id="genres_autocomplete">
      <% Genre.all.each do |genre| %>
        <option value="<%= genre.name %>">
      <% end %>
    </datalist>
   --> 
  <%= f.label :genre_id %><br />
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
  <br />

  <%= f.fields_for :notes do |note_form| %>
    <%= note_form.label "Note: " %>
    <%= note_form.text_area :content %>
    <br/>
  <% end %>

  <br />


  <%= f.submit %>
<% end %>


